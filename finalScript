
#include <iostream>
#include <string>
#include <ctime>
#include <cstdlib>
#include <fstream>
using namespace std;

void userID();
int questionReading();

int main()
{
	srand(time(0));
	return 0;
}

void userID()
{
	//declaring variables
	static string firstName;
	static string lastName;
	static string ID;
	bool inputDone = false;

	//getting user
	for (int g = 0; !(inputDone); g++)
	{
		inputDone = true;


		cout << "Please enter Firstname, Lastname and ID" << endl;
		cin >> firstName >> lastName >> ID;


		//checks for last 5 as numbers
		for (int i = 1; i < 6; i++)
		{
			if (!(ID[i] - 48 <= 9))
			{
				inputDone = false;
			} 
			else if (ID.length() < 6)
			{
				inputDone = false;
			}
		}

			//checking if first character is 'A'
			if (ID[0] != 'A')
			{
				inputDone = false;
			}

		if (g > 3)
		{
			cout << "You failed to enter correct information" << endl;
			exit(0);
		}
	}
	system("PAUSE");
}

int questionReading()
{
	//declaring variables
	string questions[100];
	string answers[100];
	ifstream myFile;
	string input;
	int numQuestions = 10;
	bool done = false;
	int score = 0;

	//opening questions file
	myFile.open("questions.txt");
	for (int i = 0; i < 100; i++)
		getline(myFile, questions[i]);
	myFile.close();

	//opening answers file
	myFile.open("answers.txt");
	for (int i = 0; i < 100; i++)
		getline(myFile, answers[i]);
	myFile.close();

	//Asking questions
	for (int i = 0; i < numQuestions; i++)
	{
		int rando = rand() % 100;
		cout << questions[rando] << endl;
		cin >> input;
		/////////////////////////////////
	}

	system("PAUSE");
	return 0;
}

