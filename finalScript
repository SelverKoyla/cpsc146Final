
#include <iostream>
#include <string>
#include <ctime>
#include <cstdlib>
using namespace std;

int main()
{
	//declaring variables
	string firstName;
	string lastName;
	string ID;
	bool inputDone = false;

	//getting user
	for (; !(inputDone);)
	{
		cout << "Please enter Firstname, Lastname and ID" << endl;
		cin >> firstName >> lastName >> ID;
		
		cout << static_cast<char>(ID[0]) << endl;
		//checks for last 5 as numbers
		for (int i = 1; i <= static_cast<int>(ID.length() - 1); i++){
			if ((static_cast<int>(ID[i]) - 49) <= 9)
				inputDone = false;
			
			//checking if first character is 'A'
		    	else if (static_cast<char>(ID[0]) != 'A')
				inputDone = false;
		}
		
	}

	system("PAUSE");
	return 0;
}
