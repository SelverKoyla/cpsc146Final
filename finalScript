
#include <iostream>
#include <string>
#include <ctime>
#include <cstdlib>
using namespace std;

int main()
{
	//declaring variables
	string firstName;
	string lastName;
	string ID;
	bool inputDone = false;
	bool firstChar = false;
	bool numbers = false;

	//getting user
	while ( !(inputDone))
	{
	    	inputDone = true;
	    
	    
		cout << "Please enter Firstname, Lastname and ID" << endl;
		cin >> firstName >> lastName >> ID;
		
		
		//checks for last 5 as numbers
		for (int i = 1; i <= static_cast<int>(ID.length() - 1); i++)
		{
			if (!((static_cast<int>(ID[i]) - 48) <= 9))
			{
			    firstChar = true;
			}
			
			
		//checking if first character is 'A'
		if (ID[0] != 'A')
			{
			    numbers = true;
			}
		}
		
		
		if (firstChar || numbers)
		    inputDone = false;
		
	}

	system("PAUSE");
	return 0;
}
