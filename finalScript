#include <iostream>
#include <string>
using namespace std;
int main()
{
	//declaring variables
	string firstName;
	string lastName;
	string ID;
	bool inputDone = true;

	//getting user
	for (cout << "Please enter Firstname, Lastname and ID" << endl; inputDone; cout << "Please enter Firstname, Lastname and ID" << endl)
	{
		cin >> firstName >> lastName >> ID;
		for (int i = 1; ID.length(); i++)
			if (static_cast<int>(ID[i]) <= 9 || static_cast<int>(ID[i]) >= 0)
		{	inputDone = false;
		cout << "Check " << endl;
		}
	}

	system("PAUSE");
	return 0;
}
