#include <iostream>
#include <string>
using namespace std;
int main()
{
	//declaring variables
	string firstName;
	string lastName;
	string ID;
	bool inputDone = true;

	//getting user
	for (; inputDone;)
	{
		cout << "Please enter Firstname, Lastname and ID" << endl;
		cin >> firstName >> lastName >> ID;
		for (int i = 2; i <= static_cast<int>(ID.length()); i++){
			if (static_cast<int>(ID[i]) <= 9 || static_cast<int>(ID[i]) >= 0)
			inputDone = false;
		}
	}

	system("PAUSE");
	return 0;
}
